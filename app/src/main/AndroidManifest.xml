<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.starup.traven.travelkorea" >
    <!--string/app_name-->

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="string/app_name"
        android:theme="@style/AppTheme"
        >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCWApaqIHuyA1Ny4nMlFIWLFZ7iAnhVxTU" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageDetailActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".ui.ImageGridActivity"
            android:theme="@style/Theme.AppCompat">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ImageGridActivity" />
        </activity>
        <activity
            android:name=".MyAccount"
            android:label=""
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyAccount" />
        </activity>
    </application>

</manifest>
